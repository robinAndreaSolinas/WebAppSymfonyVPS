{% extends 'main/skeleton.twig' %}

{% block title %}Modifica Utente{% endblock %}

{% block content %}
    <section class="container">
        <h1>Modifica Utente</h1>
        {{ form_start(form) }}
        <div class="form-group my-3">
            {{ form_row(form.username, {'attr': {'class': 'form-control', 'value': user.username }}) }}
        </div>
        <div class="form-group my-3">
            {{ form_row(form.email, {'attr': {'class': 'form-control', 'value': user.email }}) }}
        </div>
        <div class="form-group my-3">
            {% if user.enabled %}
                {{ form_row(form.enabled, {'attr': {'class': 'form-check', 'checked': user.enabled }}) }}
            {% else %}
                {{ form_row(form.enabled, {'attr': {'class': 'form-check'}}) }}
            {% endif %}
        </div>
        {% if not is_granted('ROLE_GUEST') %}
        <a href="{{ path('user_edit-psw') }}">Modifica Password</a>
        {% endif %}
        {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary mt-2'}}) }}
        {{ form_end(form) }}
    </section>
{% endblock %}
