{% extends 'main/skeleton.twig' %}

{% block title %}Crea Utente{% endblock %}

{% block content %}
    <section class="container">
        <h1>Crea Utente</h1>
        {{ form_start(form) }}
        <div class="form-group my-3">
            {{ form_row(form.username, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group my-3">
            {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group my-3">
            {{ form_row(form.password, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group my-3">
            {{ form_row(form.conf, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group my-3">
            {{ form_row(form.roles, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary mt-5'}}) }}
        {{ form_end(form) }}
    </section>
{% endblock %}
